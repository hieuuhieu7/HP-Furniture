@model HP_furniture.Models.SanPhamMoi

@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout1.cshtml";
}

<h4>CHI TIẾT SẢN PHẨM (mới)</h4>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @*@Html.DisplayNameFor(model => model.ID)*@
            ID
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.TenSanPhamMoi)*@
            Tên sản phẩm mới
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSanPhamMoi)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.SoLuongTonKho)*@
            Số lượng tồn kho
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuongTonKho)
