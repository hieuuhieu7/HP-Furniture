@model HP_furniture.Models.Phong

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout1.cshtml";
}

<h4>XÓA SẢN PHẨM PHÒNG KHÁCH</h4>

<h5>Bạn có chắc chắn muốn xóa không?</h5>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ID)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.TenPhongKhach)*@
            Tên phòng khách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhongKhach)
        </dd>

        <dt>
            @*@Html.DisplayNameFor(model => model.HinhAnhPhongKhach)*@
            Hình ảnh phòng khách
        </dt>

        <dd>
            <img src="@Model.HinhAnhPhongKhach" width="200" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Trở về danh sách", "Index")
        </div>
    }
</div>
