<!-- Phần 2 -->
<div class="col-1" style="height: 5%;"></div>
<div class="col-10" style="height: 5%;">
    @{
        List<HP_furniture.Models.GocCamHung> data = (List<HP_furniture.Models.GocCamHung>)ViewBag.Product;
        for (int i = 0; i < data.Count; i++)
        {
            <div class="col-6 product__mobile" style="height: 5%;">
                <a href="@Url.Action("Index", "ChiTietGocCamHung", new { Id = data[i].ID })" class="prd__ins">
                    <div class="prd__ins--img">
                        <img src="@data[i].HinhAnhCamHung1" alt="">
                    </div>
                    <div class="prd__ins--name">
                        <h3 style="max-width: 480px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @data[i].TenCamHung1
                        </h3>
                        <div class="prd__ins--border"></div>
                    </div>
                </a>
            </div>
        }
    }
</div>
<div class="col-1" style="height: 5%;"></div>
<div class="col-12" style="height: 10px;">
    <div style="border-bottom: 1px solid var(--rgb-primarry)"></div>
</div>

