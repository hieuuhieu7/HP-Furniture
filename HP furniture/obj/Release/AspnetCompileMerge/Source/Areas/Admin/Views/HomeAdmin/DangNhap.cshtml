@model HP_furniture.Models.NhanVien
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Đăng nhập</title>
    <link rel="website icon" type="jpg" href="~/Assets/assets/img/logo1.png" />

    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.5 -->
    <link href="~/Areas/Admin/Assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Areas/Admin/Assets/dist/css/AdminLTE.min.css" rel="stylesheet" />

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <style>
        .frm-focus {
            border: 2px solid #d1d1d1;
        }

            .frm-focus:focus {
                border: 2px solid dimgrey;
                transition: 0.3s;
            }

        .btn__click {
            outline: none;
            border: none;
            color: white;
            background-color: dimgray;
            width: 90px;
            height: 30px;
            border-radius: 1px;
            transition: 0.3s;
        }

            .btn__click:hover {
                background-color: grey;
            }
    </style>
</head>
<body class="hold-transition login-page" style="background-color: #b7b7b7">
    <div class="login-box">
        <div class="login-logo">
            <a href=""><b>Admin</b>HPfurniture</a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Đăng nhập để bắt đầu phiên của bạn</p>
            <form action="~/Admin/HomeAdmin/DangNhap" method="post">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @*<input type="text" class="form-control" placeholder="Tên người dùng" name="username">*@
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control frm-focus", @placeholder = "Tên người dùng" })
                    <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                    <div>
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group has-feedback">
                    @*<input type="password" class="form-control" placeholder="Mật khẩu" name="password">*@
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control frm-focus", @placeholder = "Mật khẩu" })
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                    <div>
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4">
                        <button type="submit" class="btn__click">Đăng nhập</button>
                    </div><!-- /.col -->
                </div>
            </form>
        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <!-- jQuery 2.1.4 -->
    <script src="plugins/jQuery/jQuery-2.1.4.min.js"></script>
    <!-- Bootstrap 3.3.5 -->
    <script src="~/Areas/Admin/Assets/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>

