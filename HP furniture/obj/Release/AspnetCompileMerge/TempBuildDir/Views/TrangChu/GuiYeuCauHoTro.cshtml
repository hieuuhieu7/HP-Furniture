<!-- Hỗ trợ -->
<div class="col-12 bg" style="height: 600px;">
    <div class="col-6" style="height: 570px;">
        <div class="bag__sp">
            <div class="hotline">
                <i class="fa-solid fa-phone-volume"></i>
                HOTLINE: 38781108
            </div>
            <!-- Form để nhập thông tin khách hàng -->
            @using (Html.BeginForm("GuiYeuCauHoTro", "TrangChu", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                <div class="sp__text">
                    <div class="sp__text-sp">Bạn cần hỗ trợ?</div>
                    <div class="sp__text-back">Xin vui lòng để lại yêu cầu hỗ trợ của bạn.</div>
                </div>
                <div class="sp__input">
                    <div class="sp__info">
                        <!-- HoTen -->
                        @Html.TextBoxFor(model => model.HoTen, new { @class = "sp__info-name sp__info-input", placeholder = "Họ tên" })
                        <div style="padding: 0 34px 0 34px"></div>
                        <!-- SDT -->
                        @Html.TextBoxFor(model => model.SDT, new { @class = "sp__info-call sp__info-input", placeholder = "(+84) 0123 456" })
                    </div>
                    <!-- Email -->
                    @Html.TextBoxFor(model => model.Email, new { @class = "sp__email", placeholder = "Email" })

                    <!-- Noi dung -->
                    @Html.TextAreaFor(model => model.NoiDung, new { @class = "sp__textarea", placeholder = "Nội dung" })
                    <button type="submit" class="sp__btn">GỬI YÊU CẦU</button>
                </div>
            }
        </div>
    </div>

    <div class="col-6" style="height: 570px;">
        <div class="background">
            <img src="~/Assets/assets/img/ghe2.jpg" alt="" class="img__bg">
        </div>
    </div>
</div>

