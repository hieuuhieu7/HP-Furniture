<!-- Sản phẩm mới -->
<div class="col-1"></div>
<div class="col-10" style="height: 50%;">
    @{
        List<HP_furniture.Models.SanPham> data = (List<HP_furniture.Models.SanPham>)ViewBag.Product;
        for (int i = 0; i < data.Count; i++)
        {
            <div class="col-3" style="height: 335px;">
                <div class="product">
                    <div class="img__container">
                        @*<div class="sale">-10%</div>*@
                        <div class="product__img">
                            <img class="product__img-link-original" src="@data[i].HinhAnhSanPham" alt="img_1">
                            <img class="product__img-link-hover" src="@data[i].HinhAnhSanPham2" alt="img_1_hover">
                        </div>
                    </div>
                    <div class="product__title">
                        <span class="product__title-name" style=" display: inline-block; max-width: 250px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @data[i].TenSanPham
                        </span>
                        <a href="/YeuThich/ThemYeuThich/@data[i].ID" class="product__icon--link">
                            <i class="fa-regular fa-heart product__icon"></i>
                        </a>
                    </div>
                    <div class="product__price">
                        <span class="price__sale">@Html.FormatValue(@data[i].GiaSanPham, "{0: #,####}")₫</span>
                    </div>
                    <div class="product__btn">
                        <div class="product__btn-cart">
                            <a href="/GioHang/ThemGioHang/@data[i].ID" class="product__btn-cart_link">
                                THÊM VÀO GIỎ
                            </a>
                        </div>
                        <div class="product__btn-details">
                            <a href="@Url.Action("Index", "ChiTietSanPham", new { Id = data[i].ID })" class="product__btn-details_link">
                                XEM THÊM
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>
