
@{
    ViewBag.Title = "HP furniture - Chi tiết phòng";
    Layout = "~/Views/share/HPfurnitureLayout.cshtml";
}
@model HP_furniture.Models.Phong

<!-- Chi tiết phòng -->
<!-- Tên phòng -->
<div class="dt">
    <div class="col-1" style="height: 100px;"></div>
    <div class="col-10 dt__flex" style="height: 100px;">
        <div class="dt__room--name">
            <h1 style="text-transform: uppercase">
                @Model.TenPhongKhach
            </h1>
        </div>
    </div>
    <div class="col-1" style="height: 100px;"></div>

    <!-- Mô tả 1 -->
    <div class="col-1" style="height: 5%;"></div>
    <div class="col-10" style="height: 5%;">
        <div class="dt__room--box">
            <span class="dt__room--box--mt">
                @Model.Mt1
            </span>
        </div>
    </div>
    <div class="col-1" style="height: 5%;"></div>
    <div class="col-12" style="height: 20px;"></div>

    <!-- Ảnh 1 -->
    <div class="col-1" style="height: 600px;"></div>
    <div class="col-10" style="height: 600px;">
        <div class="dt__room--img1">
            <img src="@Model.HinhAnhPhongKhach" alt="">
        </div>
    </div>
    <div class="col-1" style="height: 600px;"></div>

    <div class="col-12" style="height: 30px;"></div>

    <!-- Mô tả 2 và ảnh 2 -->
    <div class="col-1" style="height: 5%"></div>
    <div class="col-5" style="height: 5%;">
        <div class="dt__room--p">
            <p>
                @{
                    string moTaWithoutHtml = null;
                    if (!string.IsNullOrEmpty(Model.MoTaDai))
                    {
                        // Sử dụng Regex để loại bỏ thẻ HTML
                        moTaWithoutHtml = System.Text.RegularExpressions.Regex.Replace(Model.MoTaDai, "<.*?>", string.Empty);
                        // Giải mã HTML entities
                        moTaWithoutHtml = HttpUtility.HtmlDecode(moTaWithoutHtml);
                        // Thêm thẻ <br> sau mỗi dòng
                        moTaWithoutHtml = moTaWithoutHtml.Replace("\n", "<br>");
                    }
                    else
                    {
                        moTaWithoutHtml = "Chưa có mô tả";
                    }
                }
                <span>@Html.Raw(moTaWithoutHtml)</span>
            </p>
        </div>
    </div>
    <div class="col-5" style="height: 5%;">
        <div class="dt__room--img2">
            <img src="@Model.HinhAnh1" alt="">
        </div>
    </div>
    <div class="col-1" style="height: 5%"></div>

    <div class="col-12" style="height: 30px;"></div>

    <!-- Ảnh 3 4 -->
    <div class="col-1" style="height: 5%;"></div>
    <div class="col-5" style="height: 5%;">
        <div class="dt__room--img3">
            <img src="@Model.HinhAnh2" alt="">
        </div>
    </div>
    <div class="col-5" style="height: 5%;">
        <div class="dt__room--img4">
            <img src="@Model.HinhAnh3" alt="">
        </div>
    </div>
    <div class="col-1" style="height: 5%;"></div>

    <div class="col-12" style="height: 30px;">
        <div style="border-bottom: 1px solid var(--rgb-primarry)"></div>
    </div>
</div>
<!-- End chi tiết phòng -->
@* Mẫu thiết kế *@
