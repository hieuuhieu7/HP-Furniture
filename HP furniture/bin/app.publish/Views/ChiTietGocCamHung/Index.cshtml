
@{
    ViewBag.Title = "HP furniture - Chi tiết góc cảm hứng";
    Layout = "~/Views/share/HPfurnitureLayout.cshtml";
}
@model HP_furniture.Models.GocCamHung

<!-- Chi tiết góc cảm hứng -->
<div class="GCH">
    <div class="col-12" style="height: 20px;"></div>

    <div class="col-1" style="height: 580px;"></div>
    <div class="col-5" style="height: 580px;">
        <div style="padding: 0px 10px 0px 10px;">
            <div class="GCH__title">
                <h1>@Model.TenCamHung1</h1>
            </div>
            <div class="GCH__mt">
                <span>
                    @{
                        string moTaWithoutHtml = null;
                        if (!string.IsNullOrEmpty(Model.MoTaCamHung1))
                        {
                            // Sử dụng Regex để loại bỏ thẻ HTML
                            moTaWithoutHtml = System.Text.RegularExpressions.Regex.Replace(Model.MoTaCamHung1, "<.*?>", string.Empty);
                            // Giải mã HTML entities
                            moTaWithoutHtml = HttpUtility.HtmlDecode(moTaWithoutHtml);
                            // Thêm thẻ <br> sau mỗi dòng
                            moTaWithoutHtml = moTaWithoutHtml.Replace("\n", "<br>");
                        }
                        else
                        {
                            moTaWithoutHtml = "Chưa có mô tả";
                        }
                    }
                    <span>@Html.Raw(moTaWithoutHtml)</span>
                </span>
            </div>
        </div>
    </div>
    <div class="col-5" style="height: 580px;">
        <div class="GCH__img--sm1">
            <img src="@Model.HinhAnhCamHung1" alt="">
        </div>
    </div>
    <div class="col-1" style="height: 580px;"></div>

    <div class="col-12" style="height: 20px;"></div>

    <div class="col-1" style="height: 700px;"></div>
    <div class="col-5" style="height: 700px;">
        <div class="GCH__img--sm2">
            <img src="@Model.HinhAnhCamHung2" alt="">
        </div>
    </div>
