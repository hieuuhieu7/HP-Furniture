<style>
    .zoom-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.8); /* Màu nền của lớp đè phủ */
        z-index: 9999; /* Đặt z-index để lớp đè phủ hiển thị phía trên tất cả các phần tử khác */
        text-align: center;
    }

    .close__overlay{
        position: absolute;
        z-index: 100000;
        top: 10%;
        right: 10%;
    }

    .close__overlay--icon {
        color: whitesmoke;
        font-size: 30px;
        cursor: pointer;
        transition: 0.3s;
    }
    .close__overlay--icon:hover{
        color: grey;
    }

    .zoomed-img {
        max-width: 80%; /* Giảm kích thước tối đa của ảnh phóng to */
        max-height: 80%; /* Giảm kích thước tối đa của ảnh phóng to */
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border-radius: 5px;
    }
</style>

